<h1>ショッピングカート</h1>
<div class="box">
  <table border="1" style="border-collapse: collapse">
    <thead>
      <tr>
        <th colspan="2">商品名</th>
        <th>価格</th>
        <th>数量</th>
        <th>合計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.item, :image, :fill, 300, 200 %></td>
        <td>
          <%= cart_item.item.item_name %>
          <%= cart_item.size %>
          <%= link_to '削除', cart_item_path(cart_item), method: :delete %>
        </td>
        <td>¥<%= cart_item.item.sales_status_make %></td>
        <td>
          <%= form_with model:cart_item, url:cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
          <%= f.select :quantity, [["1","1"],["2","2"],["3","3"]] %>
          <%= f.submit "変更", class: "btn btn-primary" %>
          <% end %>
        </td>
        <td><%= (cart_item.item.sales_status_make)*cart_item.quantity %></td>
      </tr>
      <% end %>
    </tbody>
    <caption>小計</caption>
  </table>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12 text-center mt-4">
      <div class="box">
        <caption><h3>ショッピングカート</h3></caption>
        <table align="center" border="1" style="border-collapse: collapse" class="w-75">
          <thead>
            <tr>
              <th colspan="2">商品名</th>
              <th>価格</th>
              <th>数量</th>
              <th>合計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :fill, 200, 100 %></td>
              <td>
                <div class="item"><%= cart_item.item.item_name %></div>
                <div class="item">サイズ:<%= cart_item.size %></div>
                <div class="item"><%= link_to '削除', cart_item_path(cart_item.id), method: :delete %></div>
              </td>
              <td>¥<%= cart_item.item.sales_status_make %></td>
              <td>
                <%= form_with model:cart_item, url:cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
                <%= f.select :quantity, [["1","1"],["2","2"],["3","3"]] %>
                <%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= cart_item.sum_of_price %></td>
            </tr>
            <% end %>
          </tbody>
          <caption>小計 ¥<%= @total.round.to_s(:delimited)%></caption>
          <caption>
            <%= link_to '買い物を続ける', root_path, class: "btn btn-dark" %>
            <%= link_to '購入手続きへ', new_order_path, class: "btn btn-secondary" %>
          </caption>
        </table>
      </div>
    </div>
  </div>
</div>
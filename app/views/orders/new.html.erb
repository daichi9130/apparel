<%= form_with(model:@order, local: true, url:orders_confirm_path, method: :post) do |f| %>

<h3>支払方法</h3>
<%= f.radio_button :payment,:クレジットカード, checked: "checked" %>
<%= f.label :payment, 'クレジットカード' %>
<%= f.radio_button :payment,:銀行振込, checked: "checked" %>
<%= f.label :payment, '銀行振込' %>

<h3>お届け先</h3>
<%= f.label :address, '登録先住所から選択' %>
<%= f.collection_select(:address, current_customer.shippings, :id, :address, :include_blank => "選択してください") %>
<%= f.submit '注文情報確認' %>
<% end %>
<%= link_to '新しい住所を追加する', cart_items_path, class: 'btn btn-success' %>
<%= link_to 'カートに戻る', cart_items_path, class: 'btn btn-success' %>



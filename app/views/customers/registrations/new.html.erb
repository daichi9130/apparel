<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center mt-5 ml-5">
      <div class="box bg-light w-75">
        <h2>アカウントを作成する</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
          <% @customer.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
        <% end %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
          </div>
          <div class="field mt-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
          </div>
          <div class="actions mt-3">
            <%= f.submit "作成する" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

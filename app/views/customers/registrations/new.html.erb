<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 text-center mt-5">
      <div id="box1" class="bg-light mx-auto">
        <div id="box2" class="text-left pt-2 pl-4">
          <h3>アカウント登録</h3>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        　<font color="red">
          　<% if @customer.errors.any? %>
            　<%= @customer.errors.count %>件のエラーが発生しました
            　<% @customer.errors.full_messages.each do |message| %>
            　<%= message %>
            　<% end %>
          　<% end %>
        　</font>
          <div class="field text-left pl-4 pt-2">
            <strong><%= f.label :メールアドレス %></strong>
            <div><%= f.email_field :email, autofocus: true, autocomplete: "email", size: '70' %></div>
          </div>
          <div class="field text-left pl-4">
            <% if @minimum_password_length %>
            　<em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <strong><%= f.label :パスワード %></strong>
            <div><%= f.password_field :password, autocomplete: "new-password", size: '70' %></div>
          </div>
          <div class="field mt-3 text-left pl-4">
            <strong><%= f.label :パスワード確認 %></strong>
            <div><%= f.password_field :password_confirmation, autocomplete: "new-password", size: '70' %></div>
          </div>
          <div class="actions mt-3 text-left pl-4">
            <%= f.submit "アカウント登録" %>
          </div>
        <% end %>
        <div class="text-left pl-4 mt-3">
          <%= link_to 'ログイン', new_customer_session_path %>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>

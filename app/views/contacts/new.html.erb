<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1 class="name mb-5 mt-5">CONTACT</h1>
    </div>
  </div>

  <%= form_with model:@contact, url:contacts_path, local:true do |f| %>
    <div class="row">
      <div class="col-md-12 text-center mb-4">
        <%= f.text_field :name, placeholder: "お名前", size: 30 %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <%= f.email_field :email, placeholder: "メールアドレス", size: 30 %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center mt-3">
          <%= f.label :お問い合わせ内容 %></br>
          <%= f.text_area :message, size: "35x4" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <%= f.submit 'この内容で確認する', class: 'btn btn-dark' %>
      </div>
    </div>
  <% end %>
 </div>
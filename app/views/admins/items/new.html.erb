<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div id="box5" class="pt-2 pl-5">
        <h2>商品新規登録</h2>
      </div>
      <div id="box4" class="bg-light">
        <%= form_with model:@item, url:admins_items_path, local:true do |f| %>
          <table border="1">
            <tr>
              <th id="text1" class="pt-2 pl-2"><%= f.label :商品画像 %></th>
              <td id="text2" class="pl-2"><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <th class="pt-2 pl-2"><%= f.label :商品名 %></th>
              <td class="pl-2"><%= f.text_field :item_name, size: 40 %></td>
            </tr>
            <tr>
              <th class="pt-2 pl-2"><%= f.label :税抜価格 %></th>
              <td class="pl-2"><%= f.text_field :price %> 円</td>
            </tr>
            <tr>
              <th class="pt-2 pl-2"><%= f.label :ジャンル %></th>
              <td class="pl-2"><%= f.select :genre, [["JACKETS","JACKETS"],["TOPS","TOPS"],["TEES","TEES"],["PANTS","PANTS"]], include_blank: "選択して下さい", :size => "100*30" %></td>
            </tr>
            <tr>
              <th class="pt-2 pl-2"><%= f.label :販売ステータス %></th>
              <td class="pt-2 pl-2">
                <span>
                  <%= f.label :sales_status, '販売中' %>
                  <%= f.radio_button :sales_status, '1' %>
                </span>
                <span class="ml-4">
                  <%= f.label :sales_status, '販売停止' %>
                  <%= f.radio_button :sales_status, '0' %>
                </span>
              </td>
            </tr>
          </table>
          <div class="box text-center mt-4">
            <span class="item pr-4"><%= link_to 'Topへ', admins_root_path, class: 'btn btn-primary' %></span>
            <span class="item"><%= f.submit '登録', class: 'btn btn-success' %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




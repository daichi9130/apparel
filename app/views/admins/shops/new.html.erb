<div class="container">

  <div class="row">
    <div class="col-md-12 text-center">
      <h1>
        <span class="bg-success rounded font-weight-bold" style="color:white">店舗情報登録</span>
      </h1>
    </div>
  </div>

  <%= form_with model:@shop, url:admins_shops_path, local:true do |f| %>

  <div class="row">
    <div class="col-md-12">
      <%= f.label :店舗名 %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class0="col-md-12">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal %>
    </div>
  </div>

  <div class="row">
    <div class0="col-md-12">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="row">
    <div class0="col-md-12">
      <%= f.label :電話番号 %>
      <%= f.telephone_field :tell %>
    </div>
  </div>

  <div class="row">
    <div class0="col-md-12">
      <%= f.label :営業時間 %>
      <%= f.time_select :sales %>~<%= f.time_select :sales %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.submit '登録', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>

</div>




<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 text-center mt-4">
      <h1 class="text-center">住所登録</h1>
      <div id="shipping2">
          <font color="red">
 　　       　<% if @shipping.errors.any? %>
　　　        <%= @shipping.errors.count %>件未入力項目があります
 　　       　<% end %>
 　      　</font>
        <%= form_with model:@shipping, url:shippings_path, local:true do |f| %>
          <table class="text-left">
            <tr>
              <th width="200px" height="70px"><%= f.label :お名前 %></th>
              <td width="400px"><%= f.text_field :recipient_name, placeholder: "受取人氏名", size: 36 %></td>
            </tr>
            <tr>
              <th height="70px"><%= f.label :郵便番号 %></th>
              <td><%= f.text_field :postal_code, placeholder: "郵便番号ハイフンなし", size: 36 %></td>
            </tr>
            <tr>
               <th valign="top" class="pt-4"><%= f.label :住所 %></th>
               <td class="pt-4"><%= f.text_field :address, placeholder: "住所", size: 36 %></td>
            </tr>
          </table>
          <div class="pt-5 mr-5 pr-5">
            <div class="mr-5 pr-5">
              <div class="mr-5 pr-4">
                <%= f.submit '住所を追加する', class:'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
